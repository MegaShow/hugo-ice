{
  "name": "hugo-ice",
  "description": "A hugo theme designed by MegaShow.",
  "main": "assets/js/main.ts",
  "type": "module",
  "author": "MegaShow",
  "license": "MIT",
  "scripts": {
    "build": "hugo --minify --source exampleSite --themesDir ../..",
    "build:docs": "hugo --minify --source docs --themesDir ../..",
    "dev": "hugo serve --minify --source exampleSite --themesDir ../.. --port 8080",
    "dev:docs": "hugo serve --minify --source docs --themesDir ../.. --port 8080",
    "ts-check": "tsc --noEmit",
    "eslint": "eslint assets/js/ --fix --cache --quiet --ext .ts",
    "stylelint": "stylelint assets/css/**/*.scss --fix --cache --quiet"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "prettier-plugin-go-template": "^0.0.15",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  }
}
