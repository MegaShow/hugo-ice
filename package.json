{
  "name": "hugo-ice",
  "description": "A hugo theme designed by MegaShow.",
  "main": "assets/js/main.ts",
  "author": "MegaShow",
  "license": "MIT",
  "scripts": {
    "build": "hugo --minify --source exampleSite --themesDir ../..",
    "build:docs": "hugo --minify --source docs --themesDir ../..",
    "dev": "hugo serve --minify --source exampleSite --themesDir ../..",
    "dev:docs": "hugo serve --minify --source docs --themesDir ../..",
    "ts-check": "tsc --noEmit",
    "eslint": "eslint assets/js/ --fix --cache --quiet --ext .ts",
    "stylelint": "stylelint assets/css/**/*.scss --fix --cache --quiet"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.8",
    "prettier-plugin-go-template": "^0.0.13",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "typescript": "^5.1.6"
  }
}
